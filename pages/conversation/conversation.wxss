/* pages/messages/messages.wxss */
.background-col {
  margin-bottom:200rpx;
}
.my-items-container {
  display: flex;
  flex-direction: column;
  padding-top: 90rpx;
}
.item-card {
  display: flex;
  flex-direction: row;
  width: 100vw;
  height: 168rpx;
  margin-bottom: 10rpx;
  background-color: white;
  box-shadow:0px 2.5px #E0E0E0;
  align-items:center;
  justify-content:space-around;
  position: fixed;
  top: 0; 
  z-index:1000; 
}

/*SIDES OF CONVERSATIONN  */
.them {
  display: flex;
  flex-direction:column;
}
.me {
  display: flex;
  flex-direction:column;
}
/*SIDES OF CONVERSATIONN  */


.item-img {
  width:100rpx;
  height:100rpx;
  margin: 10rpx;  
  background-size: cover;
  background-position: center;
  border-radius: 50%;
}
.item-info-b {
  display: flex;
  flex-direction: column;
  align-content: center;
  background-color:white;
  border-radius:40rpx;
  padding-left:19rpx;
}
.item-info-b.convo {
  display: flex;
  flex-direction: column;
  align-content: center;
  min-width:300rpx;
  max-width:550rpx;
  min-height:80rpx;
}
.item-bold {
  font-size:30rpx;
  line-height:35rpx;
  font-weight:bold;
  overflow:wrap;
  white-space:wrap;
}
.item-bold.convo {
  padding:10rpx;
  text-align:center;
  color:grey;
  padding-bottom:15rpx;

}
.item-reg {
  font-size: 30rpx;
}
.item-reg.convo {
  font-size: 30rpx;
  padding: 10rpx;
  text-align: center;
  max-width:900rpx;
  max-height:1000rpx;
  height:auto;
  background-color:#E8EEF2;
  border-radius:40rpx;
}

.flex-row {
  display: flex;
}
.footer {
  display: flex;
  height: 130rpx;
  border-top: 2rpx solid #E0E0E0;
  justify-content:space-around;
  align-items:center;
}
.flex-row.them {
  display: flex;
}
.me > .flex-row {
  display: flex;
  flex-direction: row-reverse;
}
.form-container {
  display: flex;
  width: 100%;
  margin: 0 auto;
  position:fixed;
  bottom:0;
  background-color:white;
}

.form-container > form {
  width: 100%;
}

.lg-input-window {
  width: 60vw;
}
.lg-input-window {
  height: 70rpx;
  margin-bottom: 15rpx;
  padding-left:18rpx;
  padding-top:17rpx;
  font-size: 30rpx;
  width: 60vw;
  border-radius:14rpx;
  background-color:#E8EEF2;
  margin-top: 13rpx;
}
.add-button {
  border:3px solid #FFA630;
  height:60rpx;
  font-size:18px;
  font-family:roboto;
  border-radius:20rpx;
  box-shadow:0px 2.5px #E0E0E0;
  background-color:white;
  text-align: center;
  line-height:49rpx;
}