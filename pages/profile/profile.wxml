<!--pages/profile/profile.wxml-->
<view class="heading-bar ">
  <view class="h2 bold">My Profile:</view>
</view>

<view class="profile-info-container">
  <view class="profile-info-card">
    <view class="profile-info-bundle"> 
      <image class="userinfo-avatar" src="{{profile.avatarUrl}}" background-size="cover"></image>
      <view class="profile-form">
        <form bindsubmit='bindSubmit'>
          <view class="user-input">
            <label>Name:</label>
            <textarea class="form-text">{{profile.nickName}}</textarea>
          </view>
          <view class="user-input">
            <label>WeChat ID:</label>
            <textarea class="form-text">{{profile.phoneNumber}}</textarea>
          </view>
          <view class="user-input">
            <label>Email:</label>
            <textarea class="form-text">{{profile.email}}</textarea>
          </view>
          <view class="user-input">
            <label>Phone:</label>
            <textarea class="form-text">{{profile.phoneNumber}}</textarea>
          </view>
          <view class="user-input">
            <label>QR Code:</label>
            <textarea class="form-text last">Upload Here</textarea>
          </view>
        </form>
      </view>
      <image class="edit-btn" src="../../images/edit-icon.svg" bindtap='editProfile' type="primary" ></image>
    </view>
  </view>
  
</view>
<view class="heading-bar ">
  <view class="h2 bold">My Items:</view>
</view>
<view class="my-items-container">
  <view class="item-card" wx:for="{{my_items}}" wx:for-item="my_item" wx:key="my_item.id" bindtap='showItem' data-id="{{my_item.id}}">
    <view class="item-img" style="background-image: url('{{ my_item.cover_image.url }}')"></view>
    <view class="item-info">
      <view class="item-bold">{{ my_item.title }}</view> 
      <view class="item-reg">Listed Price: {{ my_item.price }}</view>
    </view>
    <image class="edit-btn" src="../../images/edit-icon.svg" ></image>  
  </view>
</view>

<!--blank item for padding item from bottom  -->
<view class='blank-item'></view>

<view class='nav'>
  <view class='salmon-container'>
      <view class='extend-padding' bindtap="goHome">
      <image class="avatar-tab"   src="../../images/Wechathome.svg" ></image> 
      </view>
      <view class='extend-padding' bindtap="goAdd">
      <image class="avatar-tab"   src="../../images/Wechatadd-button.svg" ></image> 
      </view>
      <view class='extend-padding' bindtap="goProfile">
      <image class="avatar-tab"   src="../../images/Wechatuser.svg" ></image> 
      </view>
  </view>
</view>
