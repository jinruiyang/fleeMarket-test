/* CATEGORY  */
.popular-category-container {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  height: 180rpx;
  width:200vw;
  background-color:#E8EEF2;
  box-shadow: 0px 2.5px #E0E0E0;
  margin-top: 175rpx;
  position: fixed;
  top: 0; 
  z-index:1000; 
}
.scroll-view-cat {
  height: 180rpx;
  margin-top: 196rpx;
  position: fixed;
  top: 0; 
  width: 100%;
  z-index:990; 
}

.scroll-view-content {
  display: flex;
  flex-direction: row; 
  background-color:#E8EEF2;
  width: 1150rpx;
  padding-bottom:10px;
  padding-top:10px;
}

 /* .scroll-cat {
