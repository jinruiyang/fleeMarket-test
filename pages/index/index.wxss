@import "/wxSearch/wxSearch.wxss";
/*FOR SEARCH AND HEADER BAR  */

.search-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #4C6085; 
  /* background-color: #00493C;   */
  height: 196rpx;
  position: fixed;
  top: 0; 
  width: 100%;
  z-index:1000; 
}
.place-class {
  color: white;
}
.search-n-city-container {
  display: flex;
  padding-bottom:20rpx;
}
.new-city-container {
  width:25vw;
  justify-content: center;
  align-items: center;
  display: flex;
}
.actual-search-container {
  width: 75vw;
}
.city-text {
  font-size: 20rpx;
  color: white;
}
.btn-container {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 30vw;
  box-shadow: inset 0 0 10px #ffffff;
  border-radius:20rpx;
  align-items: center;
  height: 64rpx;
  margin-right:10rpx;
  margin-left:10rpx;
  margin-bottom: 13rpx;
  /* background-color: rgba(255,	255,	255, 0.9); */
  background-color:#AAB7CF;
}
.selected-sort {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 30vw;
  border-radius:20rpx;
  align-items: center;
  height: 64rpx;
  margin-right:10rpx;
  margin-left:10rpx;
  margin-bottom: 13rpx;
  /* background-color: rgba(255,	255,	255, 0.9); */
  background-color:#FFA630;
}
.sort-icons {
  width: 35rpx;
  margin: 0;
  height: 50rpx;
}
 .sort-options {
  font-size: 25rpx;
  color: white;
  text-align:center;
  /* margin:10rpx;
  height:52rpx; */
  
} 
.sort-icon {
  padding-left: 8rpx;
  padding-top:5rpx;
}
.sort-container {
  display: flex;
  flex-direction: row;
  align-content: space-around;
  margin-top: 15rpx;
  font-size: 20rpx;
  color: white;
  padding-bottom: 10rpx;
}

.search-icon{
  padding-bottom: 15rpx;
}

