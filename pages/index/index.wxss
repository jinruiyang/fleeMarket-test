/* ITEMS SECTION  */

.items-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  width:95vw;
  margin: 0 auto;
  margin-top: 10rpx;
  padding-top:350rpx;

}  
.item-card {
  width:45vw;
  height: 370rpx;
  border: 3rpx solid #E8EEF2;
  border-radius: 10rpx;
  margin-bottom: 3.5vw;
  box-shadow:0px 2.5px #E0E0E0;
}
.card-image {
  width: 100%;
  height: 250rpx;
  background-size: cover;
  background-position: center;
  border: 3rpx solid #E8EEF2;
  border-radius: 10rpx 10rpx 0rpx 0rpx;
}
.item-info-container {
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
}
.item-title {
  width:90%;
  height:30rpx;
  display:block;
  position:relative;
  line-height:30rpx;
  font-size:30rpx;
  margin-top: 10rpx;
  font-weight: bold;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.listed-price {
  width:90%;
  height:30rpx;
  display:block;
  position:relative;
  line-height:30rpx;
  font-size: 25rpx;
  margin-top: 8rpx;
}

