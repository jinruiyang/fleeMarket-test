.category-btn {
  height: 140rpx;
  width: 140rpx;
  /* filter: grayscale(1); */
  filter: grayscale(1) brightness(125%);
}

.current-category-btn {
  height: 140rpx;
  width: 140rpx;
}
image {
  padding: 0;
}

