<view class="search-container">
  <import src="/wxSearch/wxSearch.wxml"/> 
    <view class="wxSearch-section"> 
      <view class="wxSearch-pancel">
        <input bindinput="wxSearchInput" bindfocus="wxSerchFocus" value="{{wxSearchData.value}}" bindblur="wxSearchBlur" class="wxSearch-input" placeholder="What are you looking for?" /> 
        <button class="wxSearch-button" bindtap="wxSearchFn" ><image style="width:20px;" mode="widthFix" src="/images/search-white.svg"></image></button>
      </view> 
    </view> 
  <template is="wxSearch" data="{{wxSearchData}}"/>
  <view class="cities-container">
    <view class="{{ city == 'Beijing' ? 'current-city' : 'specific-city' }}" bindtap='byCity' data-city="Beijing">Beijing</view>
    <view class="{{ city == 'Chengdu' ? 'current-city' : 'specific-city' }}" bindtap='byCity' data-city="Chengdu">Chengdu</view>
    <view class="{{ city == 'Shanghai' ? 'current-city' : 'specific-city' }}" bindtap='byCity' data-city="Shanghai">Shanghai</view>
  </view>
</view>
<view class="popular-category-container">
  <image class="{{ tag == 'kitchen' ? 'current-category-btn' : 'category-btn' }}" bindtap='tagged' data-tag="kitchen"  src="../../images/kitchen.svg" ></image>
  <image class="{{ tag == 'books' ? 'current-category-btn' : 'category-btn' }}" bindtap='tagged' data-tag="books"  src="../../images/books.svg" ></image>
  <image class="{{ tag == 'bedroom' ? 'current-category-btn' : 'category-btn' }}" bindtap='tagged' data-tag="bedroom" src="../../images/bedroom.svg" ></image>
  <image class="{{ tag == 'furniture' ? 'current-category-btn' : 'category-btn' }}" bindtap='tagged' data-tag="furniture"  src="../../images/furniture.svg" ></image>
</view>
<view class="items-container">
  <view class="item-card" wx:for="{{items}}" wx:for-item="item" wx:key="item.id" bindtap='showItem' data-id="{{item.id}}">
    <image class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('{{item.cover_image}}');"></image>
    <view class="item-info-container">
      <text class="item-title">{{ item.title }}</text>
      <text class="listed-price">Listed Price: Â¥{{ item.price }}</text>
    </view>
  </view>
</view>



