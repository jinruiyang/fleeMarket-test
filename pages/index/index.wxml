<view class="search-container">
  <form class="search-form">
    <textarea placeholder='Search for an item' placeholder-style="color:white ;font-size:30rpx;"></textarea>
  </form>
  <view class="cities-container">
    <view class="specific-city">Beijing</view>
    <view class="specific-city current-city">Chengdu</view>
    <view class="specific-city">Shanghai</view>
  </view>
</view>
<view class="popular-category-container">
  <image class="category-btn"   src="../../images/kitchen.svg" ></image>
  <image class="category-btn"   src="../../images/books.svg" ></image>
  <image class="category-btn"   src="../../images/bedroom.svg" ></image>
  <image class="category-btn"   src="../../images/furniture.svg" ></image>
</view>
<view class="items-container">
  <view class="item-card" wx:for="{{items}}" wx:for-item="item" wx:key="item.id" bindtap='showItem' data-id="{{item.id}}">
    <image class="card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('{{item.cover_image}}');"></image>
    <view class="item-info-container">
      <text class="item-title">{{ item.title }}</text>
      <text class="listed-price">Listed Price: Â¥{{ item.price }}</text>
    </view>
  </view>
</view>



