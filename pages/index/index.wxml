<view class="search-container">
  <import src="/wxSearch/wxSearch.wxml"/> 
    <view class="wxSearch-section"> 
      <view class="wxSearch-pancel">
        <input bindconfirm="wxSearchFn" bindinput="wxSearchInput" bindfocus="wxSerchFocus" value="{{wxSearchData.value}}" bindblur="wxSearchBlur" class="wxSearch-input" placeholder="What are you looking for?" /> 
        <button style="border: 0px;" plain="true" class="wxSearch-button" bindtap="wxSearchFn" ><image style="width:20px;" mode="widthFix" class="search-icon" src="/images/search-white.svg"></image></button>
        <view style='padding: 0px 0px; font-size: 10px;' >
      <radio-group wx:for="{{sortWay}}" wx:for-item="way" wx:key="way.id" data-id="{{way.id}}" bindtap='chooseSortMethod'>
        <radio>{{way.name}}</radio>
      </radio-group>
    </view>
      </view> 
    </view> 
  <template is="wxSearch" data="{{wxSearchData}}"/>
  <view class="cities-container">
    <view class="{{ city == 'Beijing' ? 'current-city' : 'specific-city' }}" bindtap='byCity' data-city="Beijing">Beijing</view>
    <view class="{{ city == 'Chengdu' ? 'current-city' : 'specific-city' }}" bindtap='byCity' data-city="Chengdu">Chengdu</view>
    <view class="{{ city == 'Shanghai' ? 'current-city' : 'specific-city' }}" bindtap='byCity' data-city="Shanghai">Shanghai</view>
  </view>
</view>

