/**index.wxss**/
.login-containter {
  display: flex;
  align-items: center;
  justify-content: center;
}
.login-background-img {
  color: white;
  text-align: center;
  height: 95vh;
  background-size:contain;
  background-position: center; 
  background-repeat: no-repeat;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.login-button {
  position: fixed;
  bottom: 0;
  width: 100%;
  overflow: hidden;
  height: 45px;
  background-color: #4C6085;
  color: white;
  border-radius: 0rpx;
}

/*Original styles */

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}