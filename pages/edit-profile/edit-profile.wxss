/* pages/edit-profile/edit-profile.wxss */

/* HEADING */
.heading-bar {
  height: 80rpx;
  width:100vw;
  background-color:#E8EEF2;
  display:flex;
  align-content:center;
  justify-content: center;
  box-shadow:0px 2.5px #E0E0E0;
  margin-bottom: 12rpx;
  position: fixed;
  top: 0; 
  z-index:1000;
}
.h2 {
  font-size: 45rpx;
}
.bold {
  font-weight: bold;
}

/* EDIT INFO */

.profile-img-container {
  display: flex;
  justify-content:center;
  padding-top: 80rpx;
  background-color: #E0E0E0;
}
.cover-banner {
    color: white;
    text-align: center;
    height: 30vh;
    background-size: cover !important;
    display: flex;
    align-items: center;
    justify-content: center;
    width:70vw;
  }
.container {
  padding:80rpx 0;
}
textarea {
  font-size: 30rpx;
  border: 2rpx solid #E8EEF2;
  line-height:40rpx; 
  height: 50rpx;
  padding-top: 8rpx;
  padding-left: 10rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

.submit-btn {
  color: black !important;
  background-color: white !important;
  border: 8rpx solid #FFA630;
  box-shadow:0px 5rpx #E0E0E0;
}