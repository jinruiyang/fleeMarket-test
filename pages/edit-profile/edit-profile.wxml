<!--pages/edit-profile/edit-profile.wxml-->
<view class="heading-bar ">
  <view class="heading-text">Edit My Profile:</view>
</view>
<view class="profile-img-container">
  <image class="cover-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.2) 0%, rgba(0,36,61,0.3) 50%), url({{item.cover_image.url}});" mode="scaleToFill">
  </image>
</view>

<import src="/shared/form.wxml"/>
<template is="form" data="{{email: profile.email, phoneNumber: profile.phoneNumber, city: profile.city}}"/>


