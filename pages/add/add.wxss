.container {
  padding: 0;
  padding-top: 80rpx;
  font-size: 30rpx;
}

form {
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: column;
}

.form {
  width: 100%;
}

.edit-area {
  border-radius: 0;
  padding: 16rpx;
}

.edit-area.edit-bio > textarea {
  height: 420rpx;
  width: 100%;
}

.edit-bio {
  margin-bottom: 40rpx;
}

.edit-area.edit-ability > textarea {
  height: 180rpx;
  width: 100%;
}

.limit {
  text-align: right;
  padding-right: 8rpx;
  color: #666666;
}

.input {
  display: flex;
  justify-content: space-between;
  height: 120rpx;
  align-items: center;
  border-bottom: 2rpx solid #DDDDDD;
  margin-left: 30rpx;
  padding-right: 20rpx;
}

.input > .main {
  flex-grow: 1;
  height: 100%;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.input > image {
  width: 44rpx;
  height: 44rpx;
}

.input-placeholder {
  color: #CCCCCC;
}

.label {
  width: 25%;
  border-right: 1rpx solid #E8EEF2;
}

.picker {
  width: 400rpx;
  height: 100%;
}

.action-button {
  margin: 60rpx 0 120rpx;
}

.desc {
  display: block;
  padding: 20rpx;
  color: #666666;
  font-size: 26rpx;
}

.wrapper {
  width: 690rpx;
  height: 690rpx;
  background-color: white;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-direction: column;
  text-align: center;
}

.wrapper .photo {
  width: 100%;
  height: 100%;
}

.wrapper .camera {
  width: 138rpx;
  height: 120rpx;
  margin-bottom: 8rpx;
}

.wrapper view {
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-direction: column;
}

.wrapper .success {
  width: 120rpx;
  height: 120rpx;
}

.wrapper .title {
  color: #030303;
  font-size: 48rpx;
  margin-bottom: 20rpx;
  margin-top: 48rpx;
}

.error {
  color: red;
}

.terms {
  margin-top: 20rpx;
}

.term {
  display: block;
  text-decoration: underline;
  margin-top: 10rpx;
}


