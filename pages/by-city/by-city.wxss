@import "/wxSearch/wxSearch.wxss";
/*FOR SEARCH AND HEADER BAR  */

.search-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #4C6085;
  height: 140rpx;
}

.search-form {
  background-color: #AAB7CF;
  color: #E8EEF2;
  height: 60rpx;
  width: 80%;
  padding-top: 5rpx;
  padding-left: 5rpx;
  font-size: 40rpx;
  font-weight: light;
  text-align: center;
  border-radius: 15rpx;
}

